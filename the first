    <script>
        // JavaScript function to toggle description and image display
        function toggleDescription(element) {
            var paragraph = element.nextElementSibling;
            var image = paragraph.nextElementSibling;
            var isVisible = window.getComputedStyle(paragraph).display !== "none";
            
            // Toggle description and image display
            if (isVisible) {
                paragraph.style.display = "none";
                image.style.display = "none";
            } else {
                paragraph.style.display = "block";
                image.style.display = "block";
            }
        }
    </script>
